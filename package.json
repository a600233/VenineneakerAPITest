{
  "name": "sneakers",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test": "cross-env NODE_ENV=test mocha --compilers js:babel-core/register test/routes/*.js",
    "postbuild": "npm run server",
    "prebuild": "npm-run-all test clean",
    "build": "babel ./ --out-dir lib/ --ignore ./node_modules,./.babelrc,./package.json,./package-lock.json,./test --copy-files",
    "coverage": "cross-env NODE_ENV=test PORT=4000 nyc mocha test/routes/*.js",
    "server": "cross-env NODE_ENV=dev PORT=3001 node lib/bin/www",
    "server:watch": "cross-env NODE_ENV=dev nodemon --exec babel-node bin/www",
    "start": "npm-run-all test build server",
    "clean": "rimraf ./lib && mkdir lib",
    "test:watch": "npm run test -- --watch"
  },
  "dependencies": {
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "ejs": "~2.5.7",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "mongodb": "^3.1.6",
    "mongoose": "^5.3.1",
    "morgan": "~1.9.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^3.5.0",
    "chai-http": "^4.2.0",
    "chai-things": "^0.2.0",
    "cross-env": "^5.2.0",
    "eslint-watch": "^4.0.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "nodemon": "^1.18.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2"
  }
}
